@{
    ViewBag.Title = "Index";
}

<script src="@Url.Content("~/Scripts/app/dashboard.js")" type="text/javascript"></script>
<h1>Dashboard</h1>
<br />
<h2>Bench</h2>
<div id="bench"></div>
<hr />

<h2>Roll Offs</h2>
<div id="roll_offs"></div>

<div class="modal hide" id="extendConsultantModal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">×</button>
    <h3>Extend Consultant</h3>
  </div>
  <div class="modal-body">
    <p>
        <label>Extended Until:</label>
        <input type="text" class="span2" value="@DateTime.Today.AddMonths(6).ToShortDateString()" data-date-format="m/d/yyyy" id="extensionDate">
    </p>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Close</a>
    <a href="#" id="extendConsultant" class="btn btn-primary">Save</a>
  </div>
</div>

<div class="modal hide" id="editConsultantModal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">×</button>
    <h3>Edit Consultant</h3>
  </div>
  <div class="modal-body">
    <p>
        <label>Name</label>
        <input type="text" id="consultantName" />
        <label>Roll Off Date</label>
        <input type="text" data-date-format="m/d/yyyy" id="rollOffDate" />
        <label>Image url via <a href="http://en.gravatar.com/" target="_blank">Gravatar</a></label>
        <input type="text" id="gravatar" />
    </p>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Close</a>
    <a href="#" id="updateConsultant" class="btn btn-primary">Save</a>
  </div>
</div>

<div class="modal hide" id="newConsultantModal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">×</button>
    <h3>Create Consultant</h3>
  </div>
  <div class="modal-body">
    <p>
        <label>Name</label>
        <input type="text" id="newConsultantName" />
        @*<label>Image url via <a href="http://en.gravatar.com/" target="_blank">Gravatar</a></label>
        <input type="text" />*@
    </p>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Close</a>
    <a href="#" id="createConsultant" class="btn btn-primary">Save</a>
  </div>
</div>

<script>
  $(function () {
    dashboard.init(); 
  });
</script>
