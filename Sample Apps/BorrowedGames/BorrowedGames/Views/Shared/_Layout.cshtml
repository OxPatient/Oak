<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>Borrowed Games</title>
        <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/bootstrap-responsive.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/datepicker.css")" rel="stylesheet" type="text/css" />
        <!--[if lt IE 9]>
          <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        <script src="@Url.Content("~/Scripts/jquery.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.tmpl.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-position.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/underscore.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/backbone.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/bootstrap.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/bootstrap-datepicker.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/bootstrap-tooltip.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/modit/modit.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/app/growl.js")" type="text/javascript"></script>
        
    </head>

    <body>
        <div class="navbar navbar-fixed-top">
          <div class="navbar-inner">
            <div class="container">
              <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </a>
              <a class="brand" href="/">Borrowed Games - <em>Save Money. Game On.</em></a>
              <div class="btn-group pull-right">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="icon-user"></i> You are not logged in
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                          <li><a href="@Url.RouteUrl(new { controller = "Account", action = "LogOn" })">Log On</a></li>
                          <li class="divider"></li>
                          <li><a href="@Url.RouteUrl(new { controller = "Account", action = "Register" })">Register</a></li>
                        </ul>
                    }
                    else
                    {
                        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="icon-user"></i> @User.Identity.Name
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                          <li><a href="@Url.RouteUrl(new { controller = "Account", action = "LogOff" })">Log Off</a></li>
                        </ul>
                    }
                  </div>
            </div>
          </div>
        </div>
        <script>
            $(function () {
                growl.init();
            });
        </script>
        <div class="container" style="padding-top: 60px">
            @RenderBody()
        </div>
    </body>
</html>
