<script src="@Url.Content("~/scripts/app/wanted.js")"></script>
<script src="@Url.Content("~/scripts/app/preferred.js")"></script>
<script src="@Url.Content("~/scripts/app/unwanted.js")"></script>
<script src="@Url.Content("~/scripts/app/requested.js")"></script>

<h3 id="requestedGamesHeader" style="display: none">Games friends are requesting from you</h3>
<div id="requestedGames"></div>

<div style="display: none" id="wantedGamesHeader">
  <h3>Games you want to play</h3>
  <hr />
</div>

<table id="wantedGames" class='table table-striped'></table>

<h3>Games you have access to</h3>
<hr/>
<table id="preferredGames" class='table table-striped'></table>
<div id="unwantedGames" style="margin-top: 20px"></div>

<script>
    $(function () {
        var urls = {};

        urls.preferredGamesUrl = '@Url.RouteUrl(new { controller = "Games", action = "Preferred" })';
        urls.notInterestedUrl = '@Url.RouteUrl(new { controller = "Games", action = "NotInterested" })';
        urls.wantedGamesUrl = '@Url.RouteUrl(new { controller = "Games", action = "Wanted" })';
        urls.requestedGamesUrl = '@Url.RouteUrl(new { controller = "Games", action = "Requested" })';
        urls.unwantedGamesUrl = '@Url.RouteUrl(new { controller = "Games", action = "NotInterested" })';

        wanted.init(urls);

        preferred.init(urls);

        unwanted.init(urls);

        requested.init(urls);
    });
</script>
