@{
    ViewBag.PageTitle = "Edit";
}

<h2>Edit</h2>

@if (ViewBag.Flash != null)
{
    <span>Error: @ViewBag.Flash</span>
}

@using (Html.BeginForm(new { action = "Update", id = ViewBag.Blog.Id } ))
{
    @Html.Label("Title")<br />
    @Html.TextBox("Title", Request.Form["Title"])<br />
    @Html.Label("Body")<br />
    @Html.TextArea("Body", Request.Form["Body"])<br />
    <input type="submit" value="update blog" />
}